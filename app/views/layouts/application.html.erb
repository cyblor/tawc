<!DOCTYPE html>
<html>
<head>
  <title>TAWC</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="wrapper">
	<div id="header-wrapper">
		<div id="header">
			<div id="logo">
				<h1><%= link_to "<span>TA</span>WC</a>".html_safe, :controller=>"stat", :action=>"query" %></h1>
			</div>
			<div id="menu">
				<ul>
				<li <%= @tab=="query" ? 'class="current_page_item"'.html_safe : '' %> > <%= link_to "Submit a query", :controller =>"stat", :action => "query" %></li>
				<li <%= @tab=="about" ? 'class="current_page_item"'.html_safe : '' %> > <%= link_to "About", :controller =>"stat", :action => "about" %></li>
				</ul>
			</div>
		</div>
	</div>
	<!-- end #header -->
	<div id="page">
      
		<div id="content">
      <%- flash.each do |key, msg| -%>
	      <div id="<%= key %>">
          <span style="float:right;"><%= link_to_function 'X', "Effect.Fade('#{key}')" %></span>
          <%= msg %>
		      <div class="clear"></div>
	      </div>
      <%- end -%>
      
      <%= yield %>
    </div>


